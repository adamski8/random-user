<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <pl.adamchodera.randomuser.feature.details.view.SectionItemView
        android:id="@+id/id_view_user_details_section_view_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/view_divider"/>

    <pl.adamchodera.randomuser.feature.details.view.SectionItemView
        android:id="@+id/id_view_user_details_section_view_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/view_divider"/>

    <pl.adamchodera.randomuser.feature.details.view.SectionItemView
        android:id="@+id/id_view_user_details_section_view_registration_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <include layout="@layout/view_divider"/>

</LinearLayout>